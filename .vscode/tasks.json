{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "h2pas",
            "type": "shell",
            "command": "${env:FPC_BIN}/h2pas",
            "linux": {
                "args": [
                    "-D",
                    "-c",
                    "-S",
                    "-l",
                    "${fileBasenameNoExtension}.so",
                    "${file}"
                ],
            },
            "windows": {
                "args": [
                    "-D",
                    "-c",
                    "-S",
                    "-l",
                    "${fileBasenameNoExtension}.dll",
                    "${file}"
                ],
            },
            "problemMatcher": []
        },
        {
            "label": "build app",
            "type": "shell",
            "command": "./build",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build release app",
            "type": "shell",
            "command": "./build",
            "args": [
                "--release"
            ],
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "run release app",
            "type": "shell",
            "command": "start",
            "args": [
                "build/release/mnist_predictor_app"
            ],
            "problemMatcher": [],
            "dependsOn": [
                "build release app"
            ]
        }
    ]
}