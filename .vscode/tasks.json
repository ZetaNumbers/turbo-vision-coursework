{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "make_pascal_unit",
            "type": "shell",
            "command": "${config:my.fpcdir}\\h2pas",
            "args": [
                "-D",
                "-p",
                "-c",
                "-s",
                "-l",
                "${fileBasenameNoExtension}.dll",
                "${file}"
            ],
            "problemMatcher": []
        },
        {
            "label": "build pascal",
            "type": "shell",
            "command": "${config:my.fpcdir}\\fpc",
            "args": [
                "-Px86_64",
                "-Mtp",
                "-gm",
                "${file}"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "run pascal",
            "type": "shell",
            "command": "start",
            "args": [
                "${fileBasenameNoExtension}"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": [
                "build pascal"
            ]
        },
    ]
}